	},
	"observability": {
		"enabled": true
	},
	"preview_urls": true,
	"d1_databases": [
    {
      "binding": "POS_DB_GLOBAL",
      "database_name": "pos-db-global",
      "database_id": "b166c02e-9f0a-4137-8f80-2446f4317cd5",
      "preview_database_id": "b166c02e-9f0a-4137-8f80-2446f4317cd5"
    }
  ],
	"secrets_store_secrets" : [
		{
			"binding" : "JWT_AUTH_SECRET",
			"store_id" : "acefd69d51d8446f9873c88efc6a47f3",
			"secret_name" : "JWT_AUTH_SECRET"
		},{
			"binding" : "JWT_GATEWAY_SECRET",
			"store_id" : "acefd69d51d8446f9873c88efc6a47f3",
			"secret_name" : "JWT_GATEWAY_SECRET"
		},{
			"binding" : "TWILIO_ACCOUNT_SID",
			"store_id" : "acefd69d51d8446f9873c88efc6a47f3",
			"secret_name" : "TWILIO_ACCOUNT_SID"
		},{
			"binding" : "TWILIO_AUTH_TOKEN",
			"store_id" : "acefd69d51d8446f9873c88efc6a47f3",
			"secret_name" : "TWILIO_AUTH_TOKEN"
		},{
			"binding" : "SENDGRID_API_KEY",
			"store_id" : "acefd69d51d8446f9873c88efc6a47f3",
			"secret_name" : "SENDGRID_API_KEY"
		}
	],
	/**
