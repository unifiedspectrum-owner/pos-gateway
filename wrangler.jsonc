{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "pos-api-gateway",
	"main": "src/index.ts",
	"compatibility_date": "2025-10-04",
	"compatibility_flags": ["nodejs_compat"],
	"assets": {
		"binding": "ASSETS",
